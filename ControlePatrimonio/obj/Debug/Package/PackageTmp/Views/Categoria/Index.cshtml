@model IEnumerable<ControlePatrimonio.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Categoria</h2>

<p>
    @Html.ActionLink("Criar nova categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descrição
        </th>

        <th>
            Anos de Vida ùtil
        </th>

        <th>
            Taxa anual de depre-ciação
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.TipoCategoria
        </td>

        <td>
            @item.PrazoVidaUtilGeral
        </td>

        <td>
            @item.TaxaPorcentagemDepreciacao %
        </td>


        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
