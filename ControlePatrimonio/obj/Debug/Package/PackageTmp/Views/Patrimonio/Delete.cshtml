@model ControlePatrimonio.Models.Patrimonio

@{
    ViewBag.Title = "Delete";

    //var img = new FileInfo(Model.URLImage);
}

<h2>Excluir</h2>

<h3>Certeza deseja excluir este patrimonio?</h3>
<div>
    <h4>Patrimonio</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Empresa
        </dt>

        <dd>
            @Model.EmpresaNome.ToUpper()
        </dd>


        <dt>
            Filial
        </dt>

        <dd>
            @if (Model.FilialNome != null)
            {
                @Model.FilialNome.ToUpper()
            }
            else
            {
                @Model.FilialNome
            }
        </dd>

        <dt>
            Fornecedor
        </dt>

        <dd>
            @Model.FornecedorNome.ToUpper()
        </dd>

        <dt>
            Produto
        </dt>

        <dd>
            @if (Model.ProdutoNome != null)
            {
                @Model.ProdutoNome.ToUpper()
            }
            else
            {
                @Model.ProdutoNome
            }

        </dd>

        <dt>
            Data aquisição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataAquisicao)
        </dd>



        @*<dt>
            Data Aquisição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataAquisicao)
        </dd>*@

        <dt>
            Data Cadastro
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>*@

        @*<dt>
            Nota Fiscal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NotaFiscal)
        </dd>*@

        <dt>
            Valor mensal depreciação
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ValorDepreciadoMensal)
        </dd>


        <dt>
            Data expiração de vida útil
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProdutoDataVidaUtilExpiracao)
        </dd>


        <dt>
            N° Serie
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroSerie)
        </dd>

        <dt>
            N° Patrimonio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroPatrimonio)
        </dd>

        <dt>
            Tempo Garantia Meses
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TempoGarantia)
        </dd>

        <dt>
            Licensa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Licensa)
        </dd>

        <dt>
            Observação
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observacao)
        </dd>

        @*<dt>
            Imagem
        </dt>

        <dd>
            <img src="@Url.Content(String.Format("~/Content/Images/{0}", img.Name))" />
        </dd>*@

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir " class="btn btn-danger btn-lg" /> |
            @Html.ActionLink("Voltar para lista de items / Patrimonio", "Index")
        </div>
    }
</div>
