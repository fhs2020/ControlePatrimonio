@model ControlePatrimonio.Models.Produto

@{
    ViewBag.Title = "Details";

    if (Model.URLFoto == null)
    {
        Model.URLFoto = "Hello";
    }


    var img = new FileInfo(Model.URLFoto);
}

<h2>Detalhes</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Categoria
        </dt>

        <dd>
            @Model.Categoria.TipoCategoria.ToUpper()
        </dd>



        <dt>
            Produto
        </dt>

        <dd>
            @Model.NomeProduto.ToUpper()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Marca)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Marca)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Modelo)
        </dd>

        <dt>
            Descrição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Valor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Valor)
        </dd>

        <dt>
            Nota Fiscal
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NotaFiscal)
        </dd>

        <dt>
            Tempo de garantia em meses
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TempoGarantia)
        </dd>

        @*<dt>
            Data aquisição
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataAquisicao)
        </dd>*@

        <dt>
            Observação
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Obsrvacao)
        </dd>


        @if (Model.URLFoto != "Hello")
        {
            <dt>
                Foto
            </dt>

            <dd>
                <img src="@Url.Content(String.Format("~/Content/Images/{0}", img.Name))" />
            </dd>
        }


    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar para lista de produtos", "Index")
</p>
